{{> header_principal}}

<div id="modal"></div>

<section class="c-profile">
    <article class="c-profile__content">
        <div class="cont-options-profile">
            <div class="cont-options-profile__content">
                <li class="li-active">
                    <a class="a-active" href="/user/home">
                        <i class="fas fa-edit i-active"></i>
                        <p>Editar Perfil</p>
                    </a>
                </li>
                <li>
                    <a class="" href="/password">
                        <i class="fas fa-lock"></i>
                        <p>Contraseña</p>
                    </a>
                </li>
                <li>
                    <a class="" href="/compras_usuario">
                        <i class="fas fa-shopping-bag"></i>
                        <p>Compras</p>
                    </a>
                </li>
                <li>
                    <a class="" href="/favoritos">
                        <i class="fas fa-star"></i>
                        <p>Favoritos</p>
                    </a>
                </li>
                <li>
                    <a class="" href="">
                        <i class="far fa-question-circle"></i>
                        <p>Mis preguntas</p>
                    </a>
                </li>
                <li>
                    <a class="" href="/carrito">
                        <i class="fas fa-shopping-cart"></i>
                        <p>Carrito</p>
                    </a>
                </li>
                {{#if user.is_seller}}
                    <li>
                        <a href="/user/store">
                            <i class="fas fa-store"></i>
                            <p>Mi Tienda</p>
                        </a>
                    </li>
                {{/if}}
            </div>
        </div>
        <div class="c-profile__info">
            <div class="c-profile__info__content">
                <form class="c-password" action="">
                    <h2>Cambiar contraseña</h2>
                    <p class="password--p">Cambia tu contraseña en cualquier momento</p>
                    <div class="password__div">
                        <input type="text" placeholder="Contraseña actual" required>
                    </div>
                    <div class="password__div">
                        <input type="text" placeholder="Nueva contraseña" required>
                    </div>
                    <div class="password__div">
                        <input type="text" placeholder="Confirmar contraseña" required>
                    </div>
                    <button class="password__button" type="submit">Solicitar</button>
                </form>
            </div>
        </div>
    </article>
</section>

<script src="https://www.gstatic.com/firebasejs/6.2.0/firebase-app.js"></script>
<script src="https://www.gstatic.com/firebasejs/6.2.0/firebase-storage.js"></script>

<script src="../js/dragImage.js"></script>
<script src="../js/uploadImage.js"></script>
